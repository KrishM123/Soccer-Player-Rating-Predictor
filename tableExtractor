        header[pos] = header[pos].split('>')[-1]
    header.pop()
    header.pop()
    header[2] = ''
    header[3] = ''
    header[4] = ''
    header[5] = ''
    temp = filter(lambda x: x != "", header)
    header = list(temp)
    main_tbl = standard_stats.split('<tbody>')[1].split('</tbody>')[0].split('</tr>')
    row_data = [''] * len(main_tbl)
