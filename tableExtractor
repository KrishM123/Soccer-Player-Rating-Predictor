def makeCSV(name):
    shootingDF = shooting(name)
    passingDF = passing(name)
    passTypeDF = passTypes(name)
    gscDF = goalShotCreation(name)
    defenceDF = defenciveActions(name)
    playTimeDF = playingTime(name)
    possessionDF = possession(name)
    miscDF = misc(name)
    dfs = [shootingDF, passingDF, passTypeDF, gscDF, defenceDF, playTimeDF, possessionDF, miscDF]
    Final = functools.reduce(lambda left, right: pandas.merge(left, right, on='Season'), dfs)
    Final.to_csv('C:\Krish\Coding\Python Practice\Soccer Player Predictor\Data\Player Stats\\' + name)
